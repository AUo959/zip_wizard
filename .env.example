# Database Configuration
# Postgres/Neon database connection string
DATABASE_URL=postgresql://user:password@host:5432/database

# Server Configuration  
NODE_ENV=development
PORT=3000

# Session Configuration (optional)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# API Keys (optional - for future AI/ML features)
# ANTHROPIC_API_KEY=your-api-key-here

# Application Settings
# Maximum file upload size in MB (default: 50)
MAX_UPLOAD_SIZE=50

# Archive processing timeout in ms (default: 300000 = 5 minutes)
ARCHIVE_PROCESSING_TIMEOUT=300000
